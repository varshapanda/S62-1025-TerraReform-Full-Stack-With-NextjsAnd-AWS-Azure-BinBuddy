enum Role {
  user
  admin
  volunteer
  authority
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String?
  googleId      String?        @unique
  points        Int            @default(0)
  state         String?
  city          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  role          Role           @default(user)
  images        Image[]
  notifications Notification[]
  refreshTokens RefreshToken[]
  reports       Report[]
  rewards       Reward[]
  claimedTasks  Task[]

  @@index([email])
  @@index([points])
}

model RefreshToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Report {
  id            Int      @id @default(autoincrement())
  imageUrl      String
  location      String
  latitude      Float?
  longitude     Float?
  wasteType     String?
  wasteCategory String?
  verified      Boolean  @default(false)
  status        String   @default("pending")
  userId        Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  images        Image[]
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task          Task?

  @@index([userId])
  @@index([status])
}

model Task {
  id          Int       @id @default(autoincrement())
  reportId    Int       @unique
  status      String    @default("available")
  claimedBy   Int?
  claimedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  collector   User?     @relation(fields: [claimedBy], references: [id])
  report      Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([claimedBy])
}

model Reward {
  id          Int      @id @default(autoincrement())
  userId      Int
  points      Int
  action      String
  description String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  reportId   Int?
  uploadedBy Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  report     Report?  @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user       User?    @relation(fields: [uploadedBy], references: [id])

  @@index([reportId])
  @@index([uploadedBy])
}